<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    tools:context=".activities.PedidoActivity">

    <RelativeLayout android:id="@+id/mesaRL" style="@style/FormGroup">

        <TextView
            android:id="@+id/textViewNomeCliente"
            style="@style/FormLabel"
            android:text="Mesa" />

        <EditText
            android:id="@+id/mesaET"
            style="@style/Control"
            android:layout_below="@+id/textViewNomeCliente"
            android:inputType="text|textCapCharacters"
            android:maxLength="150" />

    </RelativeLayout>

    <LinearLayout style="@style/LinearLayout" android:layout_below="@+id/mesaRL">

        <br.com.eric.atendimentomobile.utils.SlidingTabLayout
            android:id="@+id/tabs"
            style="@style/Abas" />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            style="@style/AbasViewPager" />

    </LinearLayout>

</RelativeLayout>
