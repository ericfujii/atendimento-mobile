<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    style="@style/Drawer">

    <RelativeLayout
        android:id="@+id/mainRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <ImageView
            android:src="@drawable/garcom"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_above="@+id/botoesRL"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/menuBT"
                android:clickable="true"
                android:onClick="acionarMenu"
                android:src="@drawable/ic_menu"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="14dp"
                android:layout_width="@dimen/size_s"
                android:layout_height="@dimen/size_s"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/botoesRL"
            style="@style/wrapper_menu_home">

            <RelativeLayout
                android:id="@+id/botaoAgendamentosRL"
                android:onClick="abrirAgendamentos"
                style="@style/wrap_menu_home">

                <ImageView
                    android:id="@+id/botaoAgendamentosIV"
                    android:src="@drawable/ic_rascunhos"
                    style="@style/ic_home"/>

                <TextView
                    android:layout_below="@+id/botaoAgendamentosIV"
                    android:text="Pedido"
                    style="@style/font_menu_home"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/botaoClientesRL"
                android:layout_toRightOf="@+id/botaoAgendamentosRL"
                android:onClick="abrirClientes"
                style="@style/wrap_menu_home">

                <ImageView
                    android:id="@+id/botaoClientesIV"
                    android:src="@drawable/ic_clientes"
                    style="@style/ic_home"/>

                <TextView
                    android:layout_below="@+id/botaoClientesIV"
                    android:text="Filas"
                    style="@style/font_menu_home"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/aguardeRL"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/cor_nx"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/comecoRL"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:alpha="0">
            <ImageView
                android:id="@+id/check"
                android:src="@drawable/ic_check"
                android:layout_width="156dp"
                android:layout_height="156dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/prontoTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/check"
                android:text="Pronto para come��ar!"
                android:textSize="17sp"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/progressRL"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="visible">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/statusTV"
                android:text="Verifica����o inicial, aguarde."
                android:textColor="#fff"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/statusTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/aguardePB"
                android:text="Verificando..."
                android:textSize="17sp"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"/>

            <ProgressBar
                android:id="@+id/aguardePB"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="20dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="50"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

    </RelativeLayout>

    <!---->
    <RelativeLayout
        android:id="@+id/menuEsquerdoRL"
        android:layout_gravity="start"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cor_fundo_coluna">

        <RelativeLayout
            android:id="@+id/usuarioRL"
            style="@style/wrap_info_user">

            <TextView
                android:id="@+id/nomeUsuarioTV"
                android:text="NXMULTISERVICOS"
                style="@style/font_user"/>

        </RelativeLayout>

        <View
            android:id="@+id/separadorUsuario"
            android:layout_below="@+id/usuarioRL"
            style="@style/separador"/>

        <ListView
            android:id="@+id/list_slidermenu"
            android:divider="@color/cor_separador"
            android:dividerHeight="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/separadorUsuario"
            android:layout_above="@+id/menuOpcoesRL"/>

        <LinearLayout
            android:id="@+id/menuOpcoesRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/configuracoesRL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#201f20"
                android:layout_marginRight="1dp"
                android:clickable="true"
                android:onClick="abrirConfiguracoes">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_menu_configuracoes"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#201f20"
                android:orientation="horizontal"
                android:clickable="true"
                android:onClick="logoff"
                android:padding="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_menu_sair"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sair"
                    android:textColor="#fff"
                    android:textSize="@dimen/font_s"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_margin"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
